<div class="wrapper">
  <div class="pageBody">
    <%= form_with(model: profile,url: url, local: true) do |form| %>
      <% if profile.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

          <ul>
          <% profile.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= form.fields_for :photo do |p| %>
        <div class="form-group image">
          <label class="filebutton">
            <% unless p.object.photo_type == 2 %>
            <%= image_tag(p.object.data.url(:medium,false)) %>
            <% else %>
            <%= image_tag(p.object.url)  %>
            <% end %>
          <span><%= p.file_field :data,class: "upload" %></span>
          </label>
        </div>
        
      <% end %>

      <div class="form-group name">
        <%= form.text_field :name,placeholder: "名前を入力してください" %>
      </div>
      <% if false %>
      <div class="form-group">
        <label>性別</label>
        <%= form.select :gender,[["男性",false],["女性",true]] %>
      </div>
      <% end %>
      <div class="form-group">
        <%= form.date_field :birthday %>
      </div>
      <div class="form-group">
        <%= form.text_field :birth_place %>
      </div>
      <div class="form-group">
        <label>トークテーマ</label>
        <%= form.text_field :default_talk_theme %>
      </div>
      <div class="form-group">
        <label>自己紹介</label>
        <%= form.text_area :self_introduction %>
      </div>
      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>