<!DOCTYPE html>
<html>
  <head>
    <title>Talkstore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/application', 'data-turbolinks-track': 'reload' %>
    <%= display_meta_tags default_meta_tags %>
  </head>

  <body class="admin">
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Soon管理画面</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if request.url.split('/').length > 4 && request.url.split('/')[4] == 'dashboard' %>">
              <%= link_to "ダッシュボード", admin_dashboard_path %></li>
            <li class="<%= 'active' if request.url.split('/').length > 4 && request.url.split('/')[4] == 'users' %>">
              <%= link_to "ユーザー", admin_users_path %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
