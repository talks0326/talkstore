<div class="wrapper main profile">
  <header>
    <%= link_to root_path,class: "toTop" do %>
        <%= image_tag "logo_new.png" %>
      <% end %>
  </header>
  <div class="pageBody profile">
    <%= form_with(model: profile,url: url, local: true) do |form| %>
      <div class="flexbox">
        <div class="left-content">
          <%= form.fields_for :photo do |p| %>
            <div class="form-group image">
              <label class="filebutton">
                <% unless p.object.photo_type == 2 %>
                <%= image_tag(p.object.data.url(:medium,false)) %>
                <% else %>
                <%= image_tag(p.object.url)  %>
                <% end %>
              <span><%= p.file_field :data,class: "upload" %></span>
              </label>
            </div>
          <% end %>  
        </div>
        <div class="right-content">
          <div class="form-group">
            <%= form.text_field :name,placeholder: "表示名" %>
          </div>
          <div class="form-group radio">
            <label>
              <%= form.radio_button :gender,false %><span>男性</span>
            </label>
            <label>
              <%= form.radio_button :gender,true %><span>女性</span>
            </label>
          </div>
          <div class="form-group">
            <%= form.text_field :birthday,placeholder: "生年月日 2000/1/1" %>
          </div>
          <div class="form-group">
            <%= form.text_field :place,placeholder: "居住地" %>
          </div>
          <div class="form-group">
            <%= form.text_field :work,placeholder: "職業" %>
          </div>
        </div>
      </div>
      <div class="center col-1">
        <div class="form-group">
          <%= form.text_field :default_talk_theme,placeholder: "トークテーマ" %>
        </div>
        <div class="form-group">
          <%= form.text_area :self_introduction,rows: 5,placeholder: "自己紹介" %>
        </div>
        <div class="actions">
          <%= form.submit "プロフィールを更新する" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="soon flexbox long noComment">
    <%= image_tag("logo_new.png") %>

    <div id="soon_sujest" class="sujest">
      <p>
        プロフィールを入力してね！<br/>
        なるべくたくさん入力すると、マッチングする可能性が高くなるよ！
      </p>
    </div>
  </div>
</div>
